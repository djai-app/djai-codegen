apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{systemLower}}-{{appNameLower}}
  namespace: default
spec:
  minReadySeconds: 5
  replicas: 1
  selector:
    matchLabels:
      app: {{systemLower}}-{{appNameLower}}
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  template:
    metadata:
      labels:
        app: {{systemLower}}-{{appNameLower}}
    spec:
      containers:
        - name: {{systemLower}}-{{appNameLower}}
          envFrom:
            - configMapRef:
                name: {{systemLower}}-configmap
{{#kubeSecretName}}
            - secretRef:
                name: {{kubeSecretName}}
{{/kubeSecretName}}
          image: {{containerRegistry}}/{{systemLower}}/{{appNameLower}}:{{imageVersion}}
          imagePullPolicy: Always
          ports:
            - containerPort: 8080
          resources:
            limits:
              cpu: 350m
              memory: 450Mi
            requests:
              cpu: 250m
              memory: 350Mi
      imagePullSecrets:
        - name: gitlab-secret
---
apiVersion: v1
kind: Service
metadata:
  name: {{systemLower}}-{{appNameLower}}
  namespace: default
spec:
  ports:
    - port: 8080
  selector:
    app: {{systemLower}}-{{appNameLower}}
  type: ClusterIP
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/rewrite-target: "/$2"
    nginx.ingress.kubernetes.io/x-forwarded-prefix: "/{{#routePrefix}}{{{routePrefix}}}-{{/routePrefix}}{{appNameLower}}/v1"
  name: ingress-{{systemLower}}-{{appNameLower}}
  namespace: default
spec:
  rules:
    - http:
        paths:
          - path: "/{{#routePrefix}}{{{routePrefix}}}-{{/routePrefix}}{{appNameLower}}/v1(/|$)(.*)"
            pathType: Prefix
            backend:
              service:
                name: {{systemLower}}-{{appNameLower}}
                port:
                  number: 8080
